{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES2022",
    "lib": ["ES2022"],
    "types": ["node"],
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },
    "rootDir": "src",
    "outDir": "dist",
    "allowJs": false,
    "declaration": false,
    "sourceMap": true
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules", "storybook-static"]
}
